            flex-direction: column;
        }

        .project-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
        }

        .project-card-img {
            height: 220px;
            background: linear-gradient(135deg, var(--primary-color) 0%, #0056b3 100%);
